= render :partial => 'orange_slider'
%br
#neighborhood_search
  .row
    #neighborhood_search_background.span12.offset2
      %input.span10{:type => 'text', :placeholder => "Busca por bairro, comunidade, cidade, país"}
      %button Busca

.row
  %h2.offset1 Comunidades em destaque no Dengue Torpedo
    
.row
  .span15.offset1
    = render "home/neighborhood_list"

.row
  %h3.offset1#home_houses{style: 'font-size: 18px;'}  Casas #{@selected_neighborhood.name}
  
.row
  #neighborhood_stats.offset1
    #home_visit_neighborhood_button.span5
      = render "home/visit_neighborhood_button"
    .span3
      %b= @total_reports_in_neighborhood
      %br Total de focos marcados
    .span3
      .row
        #neighborhood_open_report_button.span1 
        .span2
          %b= @opened_reports_in_neighborhood
          %br em aberto
    .span2
      .row
        #neighborhood_claimed_report_button.span1{style: 'margin-left: -20px;'}
        .span1
          %b= @claimed_reports_in_neighborhood
          %br assumidos
    .span2
      .row
        #neighborhood_resolved_report_button.span1 
        .span1
          %b= @eliminated_reports_in_neighborhood
          %br eliminados
        
.row
  #houses.span15.offset1
    = render "home/house_list"          
    
%br    
.row
  %h3.offset1{style: 'font-size: 18px;'} Patrocinadores
  #sponsors.offset1    
    
    %ul
      %li
        =link_to image_tag('translated/groupcoupon1.png'), prizes_path
      %li
        =link_to image_tag('translated/groupcoupon2.png'), prizes_path
      %li
        =link_to image_tag('translated/groupcoupon3.png'), prizes_path
      %li
        =link_to image_tag('translated/rechargecoupon.png'), prizes_path

.row
  %h3.offset1{style: 'font-size: 18px;'} Parceiros
  #partners.offset1
    CITRIS / IBM Research Brazil / Instituto Pereira Passos / Redes da Maré / Secretaria Municipal de Saúde / UBS Optimus Foundation / UC Berkeley / UFRJ
  

    

