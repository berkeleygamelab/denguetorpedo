%ul#neighborhood_list
  .row
    - @all_neighborhoods.each_with_index do |neighborhood, index|  
      %li
        .neighborhood_selection
          .neighborhood_selection_header
            %h3= link_to "NÂº #{index+1} #{neighborhood.name}", neighborhood_path(neighborhood)        
          = link_to image_tag("home_images/neighborhood#{index+1}.jpg"), neighborhood_path(neighborhood), :class => 'neighborhood_selection_photo'
    
    - if @all_neighborhoods.count < 3
      - (3 - @all_neighborhoods.count).times do
        %li
          .neighborhood_selection
            .neighborhood_selection_header
              %h3 Futuro Participante
            .neighborhood_selection_photo
              = image_tag("neighborhood_default.png")
 