!!!
%html
  %head
    %title Dengue
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield :head
    = yield :scripts

  %body{:class => [params[:controller].parameterize, params[:action].parameterize]}
    #container
      #home_nav_bar
        .row
          -# if logged in use short_logo, generate dashboard bar
          -if @current_user.nil?
            #login_bg
            = link_to image_tag("non_home_nav/long_logo.png", :id => "logo"), root_path
            .main_nav_button.span2.offset3
              = link_to "LEARN", root_path
              %span About dengue
            .main_nav_button.span1.offset1
              = link_to "PLAY", root_path
              %span &nbsp;&nbsp;How?
            .main_nav_button.span2.offset1
              = link_to "WIN", root_path
              %span What?
            .span3.offset1
              = render "layouts/login"
          -else
            %ul
              = link_to image_tag("non_home_nav/short_logo.png", :id => "logo_short"), root_path
              %li.main_nav_button.span2.offset3
                = image_tag("icons/coupon.png")
                %span About dengue
              %li.main_nav_button.span1.offset1
                = link_to "PLAY", root_path
                %span &nbsp;&nbsp;How?
              %li.main_nav_button.span2.offset1
                = link_to "WIN", root_path
                %span What?
              %li.span3.offset1
                = render "layouts/login"
             
      
      = yield
  
  #footer
    %span F.A.Q   |   Contact   |   About
