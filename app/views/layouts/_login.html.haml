- if @current_user.nil?
  #login
    #login_error
      = flash[:alert]
            
    = form_tag session_path do
      %ul
        %li= text_field_tag :email, nil, :placeholder => "E-mail"
        %li= password_field_tag :password, nil, :placeholder => "Senha" 
        %li= submit_tag "Entrar"      
      = link_to "Esqueceu sua senha?", new_password_reset_path, :id => "forgot_password"  
      
     
- else
