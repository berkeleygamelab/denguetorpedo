- if @current_user.nil?
  #login
    #login_error
      = flash[:alert]
            
    = form_tag session_path do
      %ul
        %li= text_field_tag :username, nil, :placeholder => "Username"
        %li= password_field_tag :password, nil, :placeholder => "Password"       
      = link_to "Forgot your password?", new_password_reset_path, :id => "forgot_password"  
      = submit_tag "Log In"
     
- else
  #logged_in
    .row
      %h3.span4 
        Welcome! #{@current_user.username}
    .row
      %ul
        %li.span3 
          = link_to "Account Settings", edit_user_path(@current_user.id)
        %li.span1 
          = link_to "Logout", session_path, :method => :delete
    .row
      #dashboard_search.span3
        %input{:type => 'text', :placeholder => "Search by neighborhood, city, country"}
