
- if @current_user.nil?
  #login
    #login_error
      = flash[:alert]
            
    = form_tag session_path do
      .row
        .span3 
          = text_field_tag :username, nil, :placeholder => "Username"
      .row
        .span3
          = password_field_tag :password, nil, :placeholder => "Password"       
      .row
        .span2
          = label_tag :remember_me
          = check_box_tag :remember_me, 1, params[:remember_me]

          = link_to "Forgot password?", new_password_reset_path, :id => "forgot_password"  
      = submit_tag "Login"
  #nav_login
       
      
- else
  #logged_in
    .row
      %h3.span4 
        Welcome! #{@current_user.username}
    .row
      %ul
        %li.span3 
          = link_to "Account Settings", edit_user_path(@current_user.id)
        %li.span1 
          = link_to "Logout", session_path, :method => :delete
    .row
      #dashboard_search.span3
        %input{:type => 'text', :placeholder => "Search by neighborhood, city, country"}
