- if @current_user.nil?
  #login
    #login_error
      = flash[:alert]
            
    = form_tag session_path do
      %ul
        %li= text_field_tag :username, nil, :placeholder => "Username"
        %li= password_field_tag :password, nil, :placeholder => "Password"       
      = link_to "Forgot your password?", new_password_reset_path, :id => "forgot_password"  
      = submit_tag "Log In"
     
- else
  #logged_in
    .row
      %h3.span4
        Welcome! #{@current_user.username}
    .row
      #dashboard_search
        .span2
          %input{:type => 'text', :placeholder => "Search"}