.hr_report.hr_resolved
  .row
    .span1
      .hr_before_photo
        = image_tag resolved_report.before_photo
      .hr_after_photo
        = image_tag resolved_report.after_photo
      
    .span3.hr_address
      #{resolved_report.complete_address}
    .span4
      .report_content
        = resolved_report.report
      %a Marcado:
      %a.user
        = link_to resolved_report.reporter.username + " - " + resolved_report.strftime_with(:created_at), user_path(resolved_report.reporter)
      %br
      %a Assumido: 
      %a.user
        = link_to resolved_report.claimer.username + " - " + resolved_report.strftime_with(:claimed_at), user_path(resolved_report.claimer)
      %br
      %a Eliminado: 
      %a.user
        = link_to resolved_report.eliminator.username + " - " + resolved_report.strftime_with(:eliminated_at), user_path(resolved_report.eliminator)
