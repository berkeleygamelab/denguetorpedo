.hr_report.hr_claimed
  .row
    .span1
      .hr_before_photo
        = image_tag claimed_report.before_photo
    .span3.hr_address
      #{claimed_report.complete_address}
    .span4
      .report_content
        = claimed_report.report
      %a Marcado:
      %a.user 
        = link_to claimed_report.reporter.display_name + " - " + claimed_report.strftime_with(:created_at), user_path(claimed_report.reporter)
      %br
      %a Assumido:
      %a.user
        = link_to claimed_report.claimer.display_name + " - " + claimed_report.strftime_with(:claimed_at), user_path(claimed_report.claimer)
