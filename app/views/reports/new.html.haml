!= content_for :title, 'Add a Report'
!= form_for @report, :url => {:action => "create"} do |f|
  != f.error_messages
  
  %fieldset
    %ul
      %li
        != f.label :nation
        != f.text_field :nation
      %li
        != f.label :state
        != f.text_field :state
      %li
        != f.label :city
        != f.text_field :city
      %li
        != f.label :address
        != f.text_field :address
      %li
        != f.label :neighborhood
        != f.text_field :neighborhood
      %li
        != f.label :report
        != f.text_area :report

  != f.submit "submit"