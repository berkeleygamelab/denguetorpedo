
.user_report.user_open_report
  .row
    .span8
      %h4== Report #{open.id}: #{open.complete_address}
    .span2.user_report_time
      = open.strftime_updated_at
      
  .row
    .span2.user_before_photo
      =image_tag 'http://placehold.it/100x100'
    .span6
      .row
        .user_report_content.span6
          %p
            "
            = open.report            
            "
      .row.user_report_people
        Reporter:
        %a.user==#{open.reporter.username unless open.reporter.nil?}
        %br
        =link_to 'Claim this report!', '#'
    .span1.user_report_status
      Open
  .row
    .user_report_options
      =link_to (image_tag 'icons/reports icon/emptystar.png', :id=>'user_report_favorite'), '#'
      =link_to (image_tag 'icons/reports icon/delete2.png', :id=>'user_report_delete'), '#'










