.row
  .span8.offset1
    = flash[:notice]
    %h1 Focos marcados
.row
  #report_stats
    .span2.offset1
      #rank_box
        %b Nº 1
    .span2
      #point_box
        %b= @current_user.points
        %br Pontos obtidos
          
  .row.span10.offset1
    #report_buttons
      = link_to "Marcar um foco", reports_path(:view => 'make_report'), :class => 'bttn make_report_button ' + @make_report_button_active  
      = link_to 'Todos os focos', reports_path(:view => 'recent'), :class=>'bttn reports_feed_button ' + @reports_feed_button_active
      = link_to 'Focos em aberto', reports_path(:view => 'open'), :class=>'bttn reports_open_button ' + @reports_open_button_active
      = link_to 'Focos eliminados', reports_path(:view => 'eliminate'), :class=>'bttn reports_resolved_button ' + @reports_resolved_button_active

  .row
    .span9.offset1
      - if params[:view] == 'recent'
        = render :partial => 'reports/recent', :action=>'index'
      - elsif params[:view] == 'open'
        = render :partial => 'reports/open_list'
      - elsif params[:view] == 'eliminate'
        = render :partial => 'reports/eliminate_list'
      - else params[:view] == 'make_report'
        = render :partial => "reports/make_report_form"
    
    .span6
      .row
        .span6
          .report_map_search
            %h2{style: 'margin-left: 10px;'} Procurar perto deste endereço
            %input.span6{:type => 'text', :placeholder => "Rua Sgt. Silva Nunes, 1012 - Ramos - Rio de Janeiro ", :style => 'margin-left: 10px; width: 330px;'}
      .row
        = gmaps4rails(@map_json)

      .row
        #report_sponsors
          %ul
            - random_sponsors.each do |sponsor|
              %li.span1.sponsor
                = image_tag sponsor

