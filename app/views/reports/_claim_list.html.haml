#user_reports
  - for report in @claim_feed
    - if report.status == :reported
      = render :partial => 'reports/open', :object => report, :action=>'claim_report'
    - if report.status == :claimed
      = render :partial => 'reports/claimed', :object => report
    - if report.status == :eliminated
      = render :partial => 'reports/resolved', :object => report
  - if @claim_feed == []
    .row
      .span8
        %br
        %h2 
          There are no open reports available. You can open one
          %u 
            = link_to 'here', reports_path(:view => 'open')
