= content_for :title, 'Update Profile'
.update_background
  .update_padding
    #registration
      = form_for(@user, :url => {:action => "update"}, :html => {:autocomplete => "off"}) do |f|
        = error_messages_for @user
        %a#title Update Profile
        .Register_Field
          = f.text_field :username, :placeholder => "Username"
        .Register_Field
          = f.text_field :email, :placeholder => "Email"
        .Register_Field
          = f.password_field :password, :placeholder => "Password"
        .Register_Field
          = f.password_field :password_confirmation, :placeholder => "Password Confirmation"

        = f.fields_for :house do |h|
          = h.text_field :name, :placeholder => "House Name"
          = h.fields_for :location do |l|
            = l.text_field :address, :placeholder => "Address"
            = l.text_field :neighborhood, :placeholder => "Neighborhood"
            = l.text_field :city, :placeholder => "City"
            = l.text_field :state, :placeholder => "State"
            = l.text_field :nation, :placeholder => "Country"
        = f.submit "Update"
