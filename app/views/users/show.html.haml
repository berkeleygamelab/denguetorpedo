#content  
  #user_top_bar 
    #user_top_text
      .row
        .span3.offset4
          %h1.user_name 
            = @user.username            
        .span2.user_points
          .row
            %h2 Pontos
          .user_points_bg
            = @user.points
      .row
        .user_force_position.span2.offset4
          %h3.user_house
            - if @house
              = link_to @house.name, house_path(@house)
            - else 
              = link_to "Create My House", edit_user_path(@user)
        .span2
          %h3.user_neighborhood 
            =link_to @neighborhood.name, neighborhood_path(@neighborhood)
    
    .row
      #user_top_pictures
        .span10.offset1    
          .user_profile_picture
            - if @user.profile_photo_file_name.nil?
              = image_tag("default_images/profile_default_image.png")
            - else 
              = image_tag(@user.profile_photo.url(:large))
          .user_house_picture
            - if @house.profile_photo_file_name.nil?
              = link_to image_tag("default_images/house_default_image.png"), house_path(@house)
            - else 
              = link_to image_tag(@user.house.profile_photo.url(:medium)), house_path(@house)

          .user_neighborhood_picture
            =link_to image_tag("default_images/neighborhood_default_image.png"), neighborhood_path(@neighborhood)
            
        
    .row
      #user_recent_activity.span15.offset1
        .row
          .span14
            - if @isPrivatePage
              %a{:href=>'javascript:;', :data=>{:toggle=>"collapse", :target=>"#new_post"}}     
                %h3.expand_button Escrever uma nova mensagem
              .collapse#new_post
                = render :partial => 'posts/new', locals: { wall: @user }
        .row
          %h3.span15
            Atividade recente
        .row
          .span12          
            = link_to 'Todos', user_path(@user, :filter => 'all'), :class => @feed_active_all
            |
            = link_to 'Focos', user_path(@user, :filter => 'reports'), :class => @feed_active_reports
            |
            = link_to 'Blog', user_path(@user, :filter => 'posts'), :class => @feed_active_posts
        .row

          #user_reports.span11
            - for item in @combined_sorted
              - if item.is_a? Post
                = render :partial => 'users/show_post', :object => item, :locals => {:full => true}
              - elsif item.status == :reported
                = render :partial => "reports/open.html.haml", :object => item
              - elsif item.status == :claimed
                = render :partial => "reports/claimed.html.haml", :object => item
              - elsif item.status == :eliminated
                = render :partial => "reports/resolved.html.haml", :object => item

          .span4
            .row{:style => "margin-top:-40px;"}
              .span3
                %br
                %h1{:style => "font-size:26px;margin-left:48px;"} Premios
            .row
              .span3.offset1
              %ul
              - if @user.points >= 100
                %li
                  .badge_box
                    .span2{:style => "margin-top:10px;margin-left:75px"}
                      = image_tag("badges/orange_star.fw.png")
                    .row.span4{:style => "font-size:16px;weight:bold;color:#FF6600;"}
                      De olho no mosquito
                    .row.span4{:style => "font-size:14px;weight:bold;color:#4E6868;"}
                      Carimbo digital 100 pontos
              
              - if @user.points >= 800
                %li
                  .badge_box
                    .span2{:style => "margin-top:10px;margin-left:75px"}
                      = image_tag("badges/blue_black_star.fw.png")
                    .row.span4{:style => "font-size:16px;weight:bold;color:#FF6600;"}
                      Exterminador de mosquitos
                    .row.span4{:style => "font-size:14px;weight:bold;color:#4E6868;"}
                      Adesivo pequeno + Carimbo digital 800 pontos
              - if @user.points >= 1600
                %li
                  .badge_box
                    .span2{:style => "margin-top:10px;margin-left:75px"}
                      = image_tag("badges/guerreiro_dt.fw.png")
                    .row.span4{:style => "font-size:16px;weight:bold;color:#FF6600;"}
                      Guerreiro DT
                    .row.span4{:style => "font-size:14px;weight:bold;color:#4E6868;"}
                      Adesivo grande + Carimbo digital 1600 pontos
              - if @user.points >= 3600
                %li
                  .badge_box
                    .span2{:style => "margin-top:10px;margin-left:75px"}
                      = image_tag("badges/blue_star.fw.png")
                    .row.span4{:style => "font-size:16px;weight:bold;color:#FF6600;"}
                      Comunidade Saudavel
                    .row.span4{:style => "font-size:14px;weight:bold;color:#4E6868;"}
                      Adesivo + Camiseta + Carimbo digital 3600 pontos
              - if @user.points >= 7200
                %li
                  .badge_box
                    .span2{:style => "margin-top:10px;margin-left:75px"}
                      = image_tag("badges/golden_star.fw.png")
                    .row.span4{:style => "font-size:16px;weight:bold;color:#FF6600;"}
                      Eu cuido da Comunidade!
                    .row.span4{:style => "font-size:14px;weight:bold;color:#4E6868;"}
                      Honrarias + Camiseta + Adesivo + Carimbo digital 7200 pontos 
              - 5.times do |number|
                %li
                  .price_placeholder
                    %h2 Cupon #{number}


