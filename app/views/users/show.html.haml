#content  
  #user_top_bar 

    #user_top_text
      .row
        .span3.offset4
          %h1.user_name 
            = @user.username            
        .span2.user_points
          .row
            %h2 Pontos
          .user_points_bg
            231
      .row
        .user_force_position.span2.offset4
          %h3.user_house
            - if @house
              = link_to @house.name, house_path(@house)
            - else 
              = link_to "Create My House", edit_user_path(@user)
        .span2
          %h3.user_neighborhood 
            =link_to @neighborhood.name, neighborhood_path(@neighborhood)
    .row
      #user_top_pictures
        .span10.offset1    
          .user_profile_picture
            - if @user.profile_photo_file_name.nil?
              = image_tag("default_images/profile_default_image.png")
            - else 
              = image_tag(@user.profile_photo.url(:large))
          .user_house_picture
            - if @house.profile_photo_file_name.nil?
              = link_to image_tag("default_images/house_default_image.png"), house_path(@house)
            - else 
              = link_to image_tag(@user.house.profile_photo.url(:medium)), house_path(@house)

          .user_neighborhood_picture
            =link_to image_tag("default_images/neighborhood_default_image.png"), neighborhood_path(@neighborhood)
            
        .span5
          .arrow_image
            = image_tag 'users/reward_arrowleft.png'
          .arrow_image_right
            = image_tag 'users/reward_arrowright.png'
          .user_profile_rewards
            - @prizes.each do |prize|
              .user_reward{:id => "prize#{prize.id}"}
                - if prize.prize_photo_file_name.nil?
                  = image_tag("default_images/prize_default_image.png")
                - else
                  = image_tag(prize.prize_photo.url(:large))
                .user_reward_title
                  = prize.prize_name

            - @badges.each do |badge|
              .user_reward
            

  .row
    #user_recent_activity.span15.offset1
      .row
        .span14
          - if @isPrivatePage
            %a{:href=>'javascript:;', :data=>{:toggle=>"collapse", :target=>"#new_post"}}     
              %h3.expand_button Escrever uma nova mensagem
            .collapse#new_post
              = render :partial => 'posts/new', locals: { wall: @user }
      .row
        %h3.span15
          Atividade recente
      .row
        .span12          
          = link_to 'Todos', user_path(@user, :filter => 'all'), :class => @feed_active_all
          |
          = link_to 'Focos', user_path(@user, :filter => 'reports'), :class => @feed_active_reports
          |
          = link_to 'Blog', user_path(@user, :filter => 'posts'), :class => @feed_active_posts
      .row

        #user_reports
          - for item in @combined_sorted
            - if item.is_a? Post
              = render :partial => 'users/show_post', :object => item, :locals => {:full => true}
            - elsif item.status == :reported
              = render :partial => "users/open_report", :object => item, :locals => {:full => true}
            - elsif item.status == :claimed
              = render :partial => "users/claimed_report", :object => item, :locals => {:full => true}
            - elsif item.status == :eliminated
              = render :partial => "users/resolved_report", :object => item, :locals => {:full => true}


:javascript
  $(document).ready(function() {
  $(".user_reward").hide();
  rotations = #{@prize_ids.to_json};
  position = 0;
  $("#prize" + #{@prizes.first.id}).show();
  $(".arrow_image").click(function(){
  position -= 1;
  if(position < 0)
    position = rotations.length - 1;
  $(".user_reward").hide();
  $("#prize" + rotations[position]).show();
  });
  $(".arrow_image_right").click(function(){
    position += 1;
  if(position >= rotations.length)
    position = 0;
  $(".user_reward").hide();
  $("#prize" + rotations[position]).show();
  });
  })          