- if full
  .user_report.user_open_report{:style => "width:100%;"}
    .row
      .span8
        %h4== Foco Nº #{open_report.id}: #{open_report.complete_address}
      .span2.user_report_time
        = open_report.strftime_updated_at
        
    .row
      .span2.user_before_photo
        = image_tag open_report.before_photo(:medium)
  
      .span7
        .row
          .user_report_content.span7
            "
            = open_report.report            
            "
        .row.user_report_people
          Marcado por:
          %a.user==#{open_report.reporter.username unless open_report.reporter.nil?}
          %br
          =link_to 'Assumir esse foco', '#'
      .span1.user_report_status.status
        Em aberto
    .row
      .user_report_options
        =link_to (image_tag 'icons/reports icon/emptystar.png', :id=>'user_report_favorite'), '#'
        -if @isPrivatePage
          =link_to (image_tag 'icons/reports icon/delete2.png', :id=>'user_report_delete'), '#'
