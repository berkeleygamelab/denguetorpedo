            = image_tag 'translated/LeftScrollArrow.png'
          %li
            = image_tag 'translated/coupon1.png'
          %li
            = image_tag 'translated/coupon_guerreiro_dt.fw.png'
          .arrow_right
            = image_tag 'translated/RightScrollArrow.png'
