%h1 Reset Password

= form_for @user, :url => password_reset_path(params[:id]) do |f|
  = f.error_messages

  %fieldset
    %ul
      %li
        = f.label :password
        = f.password_field :password
      %li
        = f.label :password_confirmation
        = f.password_field :password_confirmation
    = f.submit "Update Password"