%h1 Sign in

= form_tag session_path do
  .field
    = label_tag :username
    %br/
    = text_field_tag :username
  .field
    = label_tag :password
    %br>/
    = password_field_tag :password
  .field
    = check_box_tag :remember_me, 1, params[:remember_me]
    = label_tag :remember_me
  .field
    = submit_tag :Submit

= link_to "Back", root_path
