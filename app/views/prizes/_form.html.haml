
= form_for(@prize) do |f|
  - if @prize.errors.any?
    #error_explanation
      %h2
        = pluralize(@prize.errors.count, "error")
        prohibited this prize from being saved:
      %ul
        - @prize.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.text_field :prize_name, :placeholder => "Prize Name"
  .field
    = f.number_field :cost, :placeholder => "Cost"
  .field
    = f.number_field :stock, :placeholder => "Stock"
  .field
    = f.hidden_field :user_id, :value => user_id
  .field
    = f.text_area :description, :cols => 20, :rows => 10, :placeholder => "Description"
  .field
    = f.text_area :redemption_directions, :cols => 20, :rows => 10, :placeholder => "Redemption Directions"
  .field
    = f.label :expire_on
    %br
    = f.datetime_select :expire_on, :ampm => true, :default => { :hour => 23, :minute => 59 }, :discard_minute => true, :discard_hour => true
  .actions
    = f.submit