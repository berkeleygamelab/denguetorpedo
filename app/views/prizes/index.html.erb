<h1>Listing prizes</h1>

<table>
  <tr>
    <th>Prize name</th>
    <th>Cost</th>
    <th>Stock</th>
    <th>User</th>
    <th>Description</th>
    <th>Redemption directions</th>
    <th>Expire on</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prizes.each do |prize| %>
  <tr>
    <td><%= prize.prize_name %></td>
    <td><%= prize.cost %></td>
    <td><%= prize.stock %></td>
    <td><%= prize.user_id %></td>
    <td><%= prize.description %></td>
    <td><%= prize.redemption_directions %></td>
    <td><%= prize.expire_on %></td>
    <td><%= link_to 'Show', prize %></td>
    <td><%= link_to 'Edit', edit_prize_path(prize) %></td>
    <td><%= link_to 'Destroy', prize, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

