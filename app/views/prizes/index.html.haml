.row
  .span6.offset1#user_info
    - unless @user.nil?
      .row
        %div#user_info2
          .span2
            #user_profile_picture
              - if @user.profile_photo_file_name.nil?
                = image_tag("default_images/profile_default_image.png")
              - else
                = image_tag(@user.profile_photo.url(:large))
          .span
            #user_welcome
              %span
                %strong{:style => "font-size:16px;"} Meus pontos:
              #user_point_box
                %span
                  = @user.points
    .row
      .span6{:style => "margin:30px;font-weight:bold;font-size:16px;"}
        Ações:
        %br
        1. marcar um foco: 100 pontos
        %br
        2. assumir um foco: 50 pontos
        %br
        3. eliminar um foco: 250 pontos
        %br
        4. postar no mini blog: 25 pontos

  - unless @user.nil?  
    .span6.offset2
      #user_prizes
        %h3{:style => "font-size:16px;"}
          Meus prêmios:
          - @user.prize_codes.sort.reverse.last(5).each do |prize_code|
            - unless prize_code.nil?
              = link_to image_tag(prize_code.prize.prize_photo.url(:small), {:size => "60x60", :class => "trophy_photo"}), prize_path(prize_code.prize.id)

