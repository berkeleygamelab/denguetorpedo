- unless @prize.nil?
  .row
    .span15.offset1
      - if flash[:notice] 
        .row#flash_dat_notice
          #flashNotice 
            %p
              = flash[:notice]
      .row#prize_name_and_photo
        .row#prize_info
          .span6
            %div
              - if @prize.prize_photo_file_name.nil?
                = image_tag("default_images/prize_default_image.png")
              - else
                = image_tag(@prize.prize_photo.url(:large))
          .span9
            %div
              %h3
                = @prize.prize_name
              %p
                = @prize.description
      .row#prize_instructions_and_cost
        .row#bootstrap_sucks
          .span9
            %div#prize_instructions
              %h3
                Redeption directions:
              %p
                = @prize.redemption_directions
          .span6
            %div#prize_cost
              #cost_specifically
                %h5
                  = @prize.cost
              - unless @current_user.nil?
                #use_points
                  = link_to "Usar menus pontos!", prize_path, :method => :post
              - if @current_user.nil?
                #cant_use_points_sucka
                  %h6
                    You must log in to use points
  .row